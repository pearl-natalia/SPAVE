<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

  <item>
    <!-- create gradient you want to use with the angle you want to use -->
    <shape android:shape="oval" >
      <size
          android:width = "20dp"
          android:height = "20dp">
      </size>

      <gradient
          android:angle="0"
          android:centerColor="#42C5F8"
          android:startColor="#2EE8D8"
          android:endColor="#3C85FF"/>

    </shape>
  </item>
</layer-list>


