    <TextView
        android:id="@+id/motto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="1dp"
        android:fontFamily="@font/sintony"
        android:gravity="center"
        android:textAllCaps="false"
        android:textColor="#BDBFBE"
        android:textSize="24sp"
        android:text=" C a l c u l a t e "
        app:layout_constraintBottom_toBottomOf="@id/X3"
        app:layout_constraintLeft_toLeftOf="@id/startX1"
        app:layout_constraintRight_toRightOf="@id/endX2"
        app:layout_constraintTop_toTopOf="@id/X2" />

    <Button
        android:id="@+id/block1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:stateListAnimator="@null"
        android:background="#00651FFF"
        android:visibility="visible"
        android:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/Y8"
        app:layout_constraintTop_toTopOf="@id/bottomBar" />

    <Button
        android:id="@+id/block2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:stateListAnimator="@null"
        android:background="#00FFFFFF"
        android:visibility="visible"
        android:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
